<%- model_class = TodoList -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= link_to todo_list.id, todo_list_path(todo_list) %></td>
        <td><%= todo_list.content %></td>
        <td><%=l todo_list.created_at %></td>
        <td><%= link_to t('.add_task', :default => t("helpers.links.add_task")), add_task_path(todo_list), :class => 'btn btn-primary' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_todo_list_path(todo_list), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), todo_list_path(todo_list), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },           :class => 'btn btn-mini btn-danger' %>

        </td>
      </tr>
    <% end %>
    <%= link_to 'Add Task', add_task_path(@todo_list) %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_todo_list_path,
            :class => 'btn btn-primary' %>
